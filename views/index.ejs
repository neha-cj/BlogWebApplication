</section>

<section class="blog-container">
    <!-- ðŸ”¹ Static Blog Posts -->
    <div class="blog-post">
        <img src="/images/cats.jpg" alt="Blog 1">
        <h3>Cats are awesome!</h3>
        <p>Lorem ipsum dolor sit am...</p>
        <a href="/static/cats-blog" class="read-more-btn">Read More</a>

    </div>

    <div class="blog-post">
        <img src="/images/dogs.jpg" alt="Blog 2">
        <h3>Blog Post 2</h3>
        <p>Short description of the blog post.</p>
    </div>

    <div class="blog-post">
        <img src="https://picsum.photos/200" alt="Blog 3">
        <h3>Blog Post 3</h3>
        <p>Short description of the blog post.</p>
    </div>

    <div class="blog-post">
        <img src="/images/travel.jpg" alt="Blog 4">
        <h3>Travel essentials</h3>
        <p>Consider these before your next flight.</p>
    </div>

    <!-- ðŸ”¸ Dynamic Blog Posts -->
    <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
            <div class="blog-post">
                <% if (blog.imagePath) { %>
                    <img src="<%= blog.imageUrl %>" alt="<%= blog.title %>">

                <% } %>
                <h3><%= blog.title %></h3>
                <p><%= blog.content.substring(0, 100) %>...</p>
                <a href="/blogs/<%= blog.id %>" class="read-more-btn">Read More</a>
                <div class="blog-post-footer">
                <!-- Edit Button -->
                    <a href="/blogs/<%= blog.id %>/edit"><button class="blog-btn">Edit</button></a>
                    <!-- Delete Form -->
                    <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST" style="display:inline;">
                        <button type="submit" class="blog-btn">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    <% } %>
</section>

